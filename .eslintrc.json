{
  "extends": "groupon/node8",
  "rules": {
    "id-length": 0,
    "vars-on-top": 0,
    "strict": [
      2,
      "global"
    ],
    "no-param-reassign": 0
  },
  "overrides": [
    {
      "files": "*.mjs",
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {
        "node/no-unsupported-features": [
          "error",
          {
            "version": 8,
            "ignores": [
              "modules"
            ]
          }
        ]
      }
    },
    {
      "files": "*.test.js",
      "env": {
        "mocha": true
      }
    }
  ]
}
